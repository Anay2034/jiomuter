{
  "manifest_version": 3,
  "name": "JioHotstar DJ",
  "version": "11.0",
  "permissions": [
    "webRequest",
    "tabs",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "*://*.hotstar.com/*",
    "*://bifrost-api.hotstar.com/*",
    "*://open.spotify.com/*",
    "*://*.spotifycdn.com/*",
    "*://open.spotify.com/*" 
  ],
  "background": {
    "service_worker": "background.js"
  }
}